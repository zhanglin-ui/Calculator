<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button1"
        android:background="#FFFFFF"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button1"
        android:layout_alignBottom="@id/button1"
        android:text="2"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button1"
        android:layout_toRightOf="@id/button2"
        android:text="3"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:text="4"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_alignRight="@id/button2"
        android:text="5"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:layout_alignRight="@id/button3"
        android:text="6"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:text="7"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:layout_alignRight="@id/button5"
        android:text="8"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button6"
        android:layout_alignRight="@id/button6"
        android:text="9"
        android:background="#FFFFFF"/>
    <Button
    android:id="@+id/button10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/button3"
    android:layout_alignBottom="@id/button1"
    android:text="/"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button6"
        android:layout_alignBottom="@id/button6"
        android:text="X"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button9"
        android:layout_alignBottom="@id/button9"
        android:text="+"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button7"
        android:text="."
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button8"
        android:layout_alignRight="@id/button8"
        android:text="0"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button14"
        android:layout_alignBottom="@id/button14"
        android:text="删除"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button15"
        android:layout_toRightOf="@id/button15"
        android:text="-"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button10"
        android:layout_alignBottom="@id/button11"
        android:layout_alignTop="@id/button1"
        android:text="("
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button12"
        android:layout_alignTop="@id/button12"
        android:layout_alignBottom="@id/button16"
        android:text=")"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button13"
        android:text="sin"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button19"
        android:layout_alignBottom="@id/button19"
        android:text="cos"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button20"
        android:layout_alignBottom="@id/button20"
        android:text="tan"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button20"
        android:layout_toRightOf="@id/button21"
        android:text="帮助"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button19"
        android:text="长度转换"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button23"
        android:layout_alignBottom="@id/button23"
        android:text="体积转换"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button24"
        android:layout_alignBottom="@id/button24"
        android:text="进制转换"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button25"
        android:layout_alignBottom="@id/button25"
        android:text="切屏"
        android:background="#FFFFFF"/>
    <Button
        android:id="@+id/button27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button26"
        android:layout_alignBottom="@id/button26"
        android:layout_alignTop="@id/button22"
        android:text="="
        android:background="@color/colorPrimary"
        />
    <Button
        android:id="@+id/buttonsum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button25"
        android:text="="
        android:background="#FFFFFF"/>



</RelativeLayout>