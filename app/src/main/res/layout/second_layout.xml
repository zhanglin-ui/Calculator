<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/text1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:text="长度换算(M):"
        android:textColor="@color/colorAccent" />
    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:gravity="center"/>
        <Button
            android:id="@+id/button22"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="换算"
            android:background="#669966"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dm:"
            android:textColor="@color/colorAccent"
            android:gravity="left|center"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cm:"
            android:gravity="left|center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="km:"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:gravity="left|center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="体积换算(m3):"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:gravity="left|center"/>
        <EditText
            android:id="@+id/edit_text2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/button23"
            android:text="换算"
            android:background="#669966"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="cm3:"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="dm3:"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:gravity="left|center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text8"
            android:text="km3:"
            android:gravity="left|center"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="进制转换(10):"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:gravity="left|center"/>
        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text3"
            android:gravity="center"/>
        <Button
            android:id="@+id/button24"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="转换"
            android:background="#669966"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text10"
            android:text="二进制:"
            android:gravity="left|center"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text11"
            android:text="八进制："
            android:textSize="20dp"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text12"
            android:text="十六进制："
            android:textSize="20dp"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</LinearLayout>



